<div class="container">
    <h1>Edit Book</h1>
    <form action="/book/edit?bookId={{book._id}}" method="post">
        <div class="form-group">
            <label for="">Title:</label>
            <input type="text" name="title" value="{{book.title}}">
        </div>

        <div class="form-group">
            <label for="firstName">Author Name:</label>
            <input id="firstName" type="text" name="authorName" value="{{book.author.[0].name}}">
        </div>
        <div class="form-group">
            <label for="lastName">Author Last Name:</label>
            <input id="lastName" type="text" name="authorLastName" value="{{book.author.[0].lastName}}">
        </div>

        <div class="form-group">
            <label for="">Description:</label>
            <input type="text" name="description" value="{{book.description}}">
        </div>

        <div class="form-group">
            <label for="">Rate:</label>
            <input type="number" name="rating" value="{{book.rating}}">
        </div>

        <button type="submit" class="btn">EDIT</button>
    </form>
</div>